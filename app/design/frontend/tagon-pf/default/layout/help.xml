<?xml version="1.0" ?>
<layout version="0.1.0">

	<customer_account_faq translate="label">
		<label>Help - FAQ</label>

		<reference name="head">
			<action method="addCss">
				<stylesheet>css/scss-help.css</stylesheet>
			</action>
			<action method="addJs">
				<stylesheet>js/faq.js</stylesheet>
			</action>
		</reference>

		<update handle="customer_account"/>
		<!-- Mage_Customer -->
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>

		<reference name="content">
			<block type="help_customer/faq" name="customer_faq" template="customer/account/faq.phtml" />
		</reference>

	</customer_account_faq>
</layout>