<?xml version="1.0"?>
<config>
    <modules>
        <Tagon_CustomListing>
            <version>0.1.1</version>
        </Tagon_CustomListing>
    </modules>
    <global>
        <blocks>
            <custom_listing>
                <class>Tagon_CustomListing_Block</class>
            </custom_listing>
        </blocks>
        <models>
            <custom_listing>
                <class>Tagon_CustomListing_Model</class>
            </custom_listing>
            <!-- this rewrite is required to fix a known bug of addOrderedQty not working with flat catalog -->
            <reports_resource>
                <rewrite>
                    <product_collection>Tagon_CustomListing_Model_Resource_Product_Collection</product_collection>
                </rewrite>
            </reports_resource>
        </models>
        <helpers>
            <custom_listing>
                <class>Tagon_CustomListing_Helper</class>
            </custom_listing>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <custom_listing>
                    <file>tagon/custom_listing.xml</file>
                </custom_listing>
            </updates>
        </layout>
    </frontend>
</config>